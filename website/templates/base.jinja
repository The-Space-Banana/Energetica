    <img src="{{ url_for('static', filename='images/icons/production_overview.png') }}" class="navbar_icon margin-small"/>
    <span style="padding:8px 0">Production overview</span>
  </a>
  <a class="navbar_item tan_green flex-row" id="power_facilities" href="/power_facilities">
    <img src="{{ url_for('static', filename='images/icons/power_facilities.png') }}" class="navbar_icon margin-small"/>
