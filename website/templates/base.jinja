    <span style="padding:8px 0">Logout</span>
  </a>
</nav>

<div class="version large">Version : alpha 0.2.0</div>

<div class="ressources medium tan_green">
  <div class="padding money_font large" id="money"><script>display_money_long({{user.money}});</script></div>
  <div class="padding" id="coal"><script>display_kg({{user.coal}});</script> <img src="{{ url_for('static', filename='images/ressources/coal.png') }}" class="icon" alt="coal"></div>
  <div class="padding" id="oil"><script>display_kg({{user.oil}});</script> <img src="{{ url_for('static', filename='images/ressources/oil.png') }}" class="icon" alt="oil"></div>
  <div class="padding" id="gas"><script>display_kg({{user.gas}});</script> <img src="{{ url_for('static', filename='images/ressources/gas.png') }}" class="icon" alt="gas"></div>
  <div class="padding" id="uranium"><script>display_kg({{user.uranium}});</script> <img src="{{ url_for('static', filename='images/ressources/uranium.png') }}" class="icon" alt="uranium"></div>
</div>

<div class="main_container tan_green">
{% block content %} {% endblock %}
</div>

{% endblock %}

{% block scripts %}
<script src="{{ url_for('static', filename='sockets.js') }}" ></script>
<script src="{{ url_for('static', filename='progress_bar.js') }}" ></script>
