{% extends "base.jinja" %} {% block title %}Technologies{% endblock %} {% block content
%}

<div class="huge title">Technologies</div>

{% if user.under_construction %}
<div id="under_construction">
  {% for facility in user.under_construction %}
  {% if facility.family == "technologies"%}
  <div class="padding" id="progress_bar">
    The facility <b>{{data[facility.name]["name"]}}</b> is under construction <i class="time" data-name="{{facility.finish_time}}"></i>
  </div>
  {% endif %}
  {% endfor %}
</div>
{% endif %}

{% set facility = data["mineral_extraction"] %}
<div class="bone margin facility small">
 <img class="img" src="{{ url_for('static', filename='images/technologies/mineral_extraction.jpg') }}"\>
 <div class="infotext padding">
  <strong class="large"><a class="no_deco" href="https://en.wikipedia.org/wiki/Mining" target="_blank">{{facility["name"]}}</a></strong><br>
  Mineral extraction improves the process of extracting minerals like coal and uranium.
 </div>
 <div class="infobox">
 <b class="margin medium white padding button" onclick="start_construction('mineral_extraction', 'technologies');">
    Research
  </b>
  <div class="margin">
    <i class="fa fa-money"></i> <script>display_CHF({{facility["price"]}});</script> <br>
    <i class="fa fa-hourglass-half"></i> <script>display_duration({{facility["construction time"]}});</script> <br>
    <i class="fa "></i> <script>display_Wh({{facility["construction energy"]}});</script> <br>
  </div>
 </div>
</div>

