{% extends "base.jinja" %} {% block title %}Technologies{% endblock %} {% block content
%}

<div class="huge title">Technologies</div>

{% set building = data["mineral_extraction"] %}
<div class="bone margin building small">
 <img class="img" src="{{ url_for('static', filename='images/technologies/mineral_extraction.jpg') }}"\>
 <div class="infotext padding">
  <strong class="large"><a class="no_deco" href="https://en.wikipedia.org/wiki/Mining" target="_blank">{{building["name"]}}</a></strong><br>
  Mineral extraction improves the process of extracting minerals like coal and uranium.
 </div>
 <div class="infobox">
 <b class="margin medium white padding button" onclick="start_construction('mineral_extraction'); location.reload();">
    Research
  </b>
  <div class="margin">
    <i class="fa fa-money"></i> <script>display_CHF({{building["initial price"]}});</script> <br>
    <i class="fa fa-hourglass-half"></i> <script>display_duration({{building["research time"]}});</script> <br>
    <i class="fa "></i> <script>display_Wh({{building["research energy"]}});</script> <br>
  </div>
 </div>
</div>

