{% extends "base.jinja" %}
{% block title %}
  Extraction facilities
{% endblock title %}
{% block content %}
  {% set assets = data["assets"] %}
  <div class="flex-row huge title">
    Extraction facilities
    <div class="pine info_icon_container"
         onclick="document.getElementById('info_popup').classList.remove('hidden');">{{ wikiImage() }}</div>
  </div>
  <div id="info_popup" class="popup hidden green">
    <div class="flex-row margin-small align-items-center">
      <div class="large txt_center flex-grow-1">Help : Extraction facilities</div>
      <div onclick="document.getElementById('info_popup').classList.add('hidden');"
           class="cross pine margin-small"
           style="width:39px">Ã—</div>
    </div>
    <div class="txt_center margin medium">
      <p>On this page you will find all the facilities that can extract natural resources from the ground.</p>
      <p>
        For more information about Extraction facilities, refer to the <a href="{{ url_for('views.wiki', _anchor='Extraction_Facilities') }}">Extraction
        facilities section in the wiki</a>.
      </p>
    </div>
  </div>
  <div id="under_construction">
    {# Facilites under construction will show here #}
  </div>
  {% for extraction_facility in ["coal_mine", "oil_field", "gas_drilling_site", "uranium_mine"] %}
    {% set facility_data = assets[extraction_facility] %}
    {% set const_data = engine.const_config[extraction_facility] %}
    {% set resource = {"coal_mine": "coal", "oil_field": "oil", "gas_drilling_site": "gas", "uranium_mine": "uranium"}[extraction_facility] %}
    <div id="{{ const_data.name }}"
         class="bone margin facility small"
         onclick="show_construction('{{ const_data.name }}', '{{ facility_data.locked }}');">
      <img class="img"
           src="{{ url_for('static', filename='images/extraction_facilities/'+extraction_facility+'.jpg') }}"
           width="250"
           height="167"
           alt="{{ const_data.name }}">
      <div class="infotext padding">
        <strong class="large">{{ const_data.name }}</strong>
        &ensp;
        <a class="white wikipedia_icon_container no_deco"
           href="{{ const_data.wikipedia_link }}"
           target="_blank">
          <i class="fa fa-wikipedia-w" aria-hidden="true"></i>
        </a>
        &emsp;
        <span class="money_font">
          <script>display_money_long({{ facility_data.price }});</script>
        </span>
        <br>
        {{ const_data.description }}
        <br>
        <br>
        <em class="txt-blue"><i class="fa fa-info-circle"></i> Underground reserves of {{ resource }} : <strong>
          <script>display_kg({{ user.tile[resource] }});</script>
        </strong></em>
      </div>
      <div class="infobox" id="requirements">
        {% if facility_data.locked %}
          <div>
            <strong>Unlock with :</strong>
            <br>
            <ul style="padding:0; margin:0;">
              {% for req in facility_data.requirements %}
                <li class="margin-small{% if req[2] %} req_fullfilled {% else %} requirement {% endif %}">
                  -
                  {{ engine.const_config[req[0]]["name"] }} lvl {{ req[1] }}
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      </div>
      <div class="infobox" id="infotable">
        <table class="table tan_green">
          <tr>
            <td>Power consumption</td>
            <td class="txt_center">
              <strong>
                <script>display_W({{ facility_data["power consumption"]}});</script>
              </strong>
            </td>
          </tr>
          <tr>
            <td>{{ resource[0]|upper + resource[1:] }} production</td>
            <td class="txt_center">
              <strong>
                <script>display_kg({{ facility_data["amount produced"]* 60 }});</script>/h
              </strong>
            </td>
          </tr>
          <tr>
            <td>CO2 emissions</td>
            <td class="txt_center">
              <strong>
                <script>display_kg({{ facility_data["pollution"]*1000}});</script>/t
              </strong>
            </td>
          </tr>
        </table>
      </div>
      <div id="constructionContent" class="infobox hidden constructionContent">
        <div class="flex-col">
          <div class="txt_center margin-small" style="width:180px">
            Duration : <strong><script>display_duration({{ facility_data["construction time"]}});</script></strong>
            <br>
            Energy need : <strong><script>display_W({{ facility_data["construction power"]}});</script></strong>
            <br>
            Emmissions : <strong><script>display_kg({{ facility_data["construction pollution"]}});</script> CO2</strong>
            <button class="padding medium white button txt_center"
                    onclick="start_construction('{{ extraction_facility }}', 'Extraction facilities');"
                    style="width:192px; margin-top:8px;">
              <b>Start construction</b>
            </button>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
{% endblock content %}
{% block additionnal_script %}
  <script src="{{ url_for('static', filename='click_construction.js') }}"></script>
  <script>refresh_progressBar()</script>
{% endblock additionnal_script %}
