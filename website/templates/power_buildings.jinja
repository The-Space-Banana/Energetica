{% extends "base.jinja" %} {% block title %}Power buildings{% endblock %} {% block content
%}

<div class="huge title">Power buildings</div>

{% set building = data["steam engine"] %}
<div class="bone margin building small">
 <img class="img" src="{{ url_for('static', filename='images/power_buildings/steam_engine.png') }}"\>
 <div class="infotext padding">
  <strong class="large">Steam engine</strong><br>
  The steam engine burns wood to produce electricity. 
 </div>
 <div class="infobox">
 <b class="margin medium white padding button" onclick="start_construction('power buildings','coal mine');">
    Start construction
  </b>
  <div>
    <i class="fa fa-money"></i> <script>display_CHF({{building["price"]}});</script> <br>
    <i class="fa fa-hourglass-half"></i> <script>display_duration({{building["construction time"]}});</script> <br>
    <i class="fa "></i> <script>display_Wh({{building["construction energy"]}});</script> <br>
    <i class="fa fa-cloud"></i> <script>display_kg({{building["construction pollution"]}});</script>
  </div>
  <div class="margin tan_green padding">
    <i class="fa fa-bolt"></i> <script>display_W({{building["power production"]}});</script> <br>
    <i class="fa Example of truck fa-truck"></i> <script>display_CHF({{building["amount consumed"]}});</script>/h <br>
    <i class="fa fa-cloud"></i> {{building["pollution"]}} g/kWh
  </div>
 </div>
</div>

