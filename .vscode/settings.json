{
    "editor.formatOnSave": true,
    "files.associations": {
        "*.jinja": "jinja-html"
    },
    "[jinja-html]": {
        "editor.wordWrapColumn": 120,
        "editor.defaultFormatter": "monosans.djlint",
        "editor.formatOnSave": false,
        "editor.rulers": [
            80,
            120
        ]
    },
    "files.exclude": {
        "**/__pycache__": true
    },
    "editor.rulers": [
        80
    ],
    "[python]": {
        "editor.rulers": [
            80,
            120
        ]
    },
    "pylint.args": [
        "--max-line-length=120"
    ]
}