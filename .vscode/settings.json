{
    "editor.formatOnSave": true,
    "files.associations": {
        "*.jinja": "jinja-html",
        "*.js": "javascript"
    },
    "[jinja-html]": {
        "editor.wordWrapColumn": 120,
        "editor.defaultFormatter": "monosans.djlint",
        "editor.formatOnSave": false,
        "editor.rulers": [80, 120]
    },
    "[javascript]": {
        "editor.wordWrapColumn": 120,
        "editor.rulers": [120]
    },
    "files.exclude": {
        "**/__pycache__": true
    },
    "editor.rulers": [80],
    "[python]": {
        "editor.rulers": [80, 120]
    },
    "pylint.args": ["--max-line-length=120"],
    "cSpell.words": [
        "apscheduler",
        "backref",
        "cumsum",
        "cumul",
        "DGRAM",
        "dont",
        "emsp",
        "Energetica",
        "engineio",
        "eventlet",
        "httpauth",
        "iloc",
        "isort",
        "itertuples",
        "jsonify",
        "lvls",
        "minmax",
        "Photovoltaics",
        "pwhash",
        "Pylint",
        "pyproject",
        "pywebpush",
        "renewables",
        "solars",
        "sqlalchemy",
        "subarrays",
        "Unsubscription",
        "uselist",
        "webcredentials",
        "webpush",
        "werkzeug",
        "windspeed"
    ]
}
